<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="inertial" params="mass x y z">
    <inertial>
      <origin xyz="0 0 -0.1" rpy="0 0 0"/>
      
      <mass value="${mass}" />
      <inertia
        ixx="${(1/12.0) * mass * (y*y + z*z)}" ixy="0.0" ixz="0.0"
        iyy="${(1/12.0) * mass * (x*x + z*z)}" iyz="0.0"
        izz="${(1/12.0) * mass * (x*x + y*y)}" />
    </inertial>
  </xacro:macro>

</robot>